/* pages/introduction_spot/introduction_spot.wxss */

/* 轮播图片部分 */

page {
  height: 100%;
}

.all {
  width: 100%;
  height: 100vh;
}

.lunbo {
  height: 500rpx;
  border-radius: 20rpx;
}

.picBox image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
}

/* 内容部分 */

.title {
  padding-top: 30rpx;
  padding-left: 2%;
  font-size: 20px;
}

.content {
  margin-top: 10rpx;
  font-size: 15px;
  /* text-indent: 60rpx; */
  padding: 10rpx 20rpx;
  color: #474747;
}

.img_box1 {
  right: 5%;
  display: inline-block;
  position: absolute;
  top: 0rpx;
}

.img_box1 image {
  width: 30rpx;
  height: 35rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #444956;
  opacity: 0.4;
  overflow: hidden;
  z-index: 200000;
  color: #fff;
}
.modalBox_0{
  width: 80%;
  height: 360rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 300000;
  border-radius: 20rpx
}

.tip_0 {
  position: relative;
  height: 100%;
}

.title_tip {
  font-size: 15px;
  color: red;
  text-align: center;
  margin-top: 30rpx;
}
.cont_tip_0{
   margin-left:14%;
  width: 75%;
  font-size:15px;
  color: #474747;
  text-align: center;
  margin-top: 50rpx;
  letter-spacing: 1px;
  line-height: 50rpx;
}
.btn_tip {
  margin-top: 70rpx
}
.btn_tip button{
  background: red;
  border-radius: 100rpx;
  color: white;
  font-size: 14px;
  margin-left: auto;
  margin-right: auto;
  height: 65rpx;
  line-height: 65rpx;
}

.btn_tip button::after {
  border: none;
}
