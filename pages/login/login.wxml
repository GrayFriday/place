<!--pages/login/login.wxml-->
<view>
  <!-- 图片部分 start -->
  <view class='picBox'>

  </view>
  <!-- 图片部分 end -->

  <!-- input部分 start -->
  <view>
    <van-cell-group class="inpBox">

      <van-field value="{{ sms }}" center clearable label="手机号"  maxlength="11" placeholder="请输入手机号" border="{{ true }}" use-button-slot>
      </van-field>

      <van-field value="{{ sms }}" center clearable label="密码" placeholder="请输入密码" border="{{ true }}" use-button-slot>
      </van-field>
    </van-cell-group>
  </view>
  <!-- input部分 end -->

  <!-- 忘记密码部分 start -->
  <view class='tip'>
    忘记密码？
  </view>
  <!-- 忘记密码部分 end -->


  <!-- 登录按钮 start -->
  <view>
    <button class='loginBtn'>登录</button>
  </view>
  <!-- 登录按钮 end -->

  <!-- 跳转注册部分 start -->
  <view class='toRegister' bindtap='toRegister'>
    没有注册？
    <span style="color:red;">去注册 > </span>
  </view>
  <!-- 跳转注册部分 end -->
</view>