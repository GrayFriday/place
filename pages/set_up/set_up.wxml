<!--pages/personal_home_page/personal_home_page.wxml-->
<view>
  <van-row>
    <!-- 个人信息部分 start -->
    <van-col span="24" custom-class="inforBox">
      <van-col span="5" custom-class="touxiang">
        <open-data type="userAvatarUrl"></open-data>
      </van-col>
    </van-col>
    <!--个人信息 end -->

    <!-- 个人信息内容 start -->
    <van-col span="24" custom-class="contentBox">
      <van-col span="24" custom-class="content">
        <van-col span="6" custom-class="nickname">
          昵称
        </van-col>

        <van-col span="16" custom-class="nickname_content">
          <open-data type="userNickName"></open-data>
        </van-col>
      </van-col>

      <van-col span="24" bindtap="toChangePassword">
        <van-col span="6" custom-class="nickname">
          修改密码
        </van-col>

        <van-col span="16" custom-class="nickname_content">
          ······
        </van-col>

      </van-col>

    </van-col>

    <van-col span="24" custom-class="contentBox">
      <van-col span="24">
        <van-col span="6" custom-class="nickname">
          地址
        </van-col>

        <van-col span="16" custom-class="nickname_content">
          成都市
        </van-col>
      </van-col>

      <van-col span="24">
        <van-col span="6" custom-class="nickname">
          上次登录
        </van-col>

        <van-col span="16" custom-class="nickname_content">
          2019-02-27 15：17：15
        </van-col>
        
      </van-col>

    </van-col>

    <!-- 个人信息内容 end -->
  </van-row>
</view>