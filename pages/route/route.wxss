/* pages/discovery_activities/discovery_activities.wxss */

.picBox {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  margin-left: 2%;
  overflow: hidden;
  padding-bottom: 20rpx;
  position: relative;
}

.picBox image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.content {
  width: 100%;
  padding-top: 60rpx;
  padding-bottom: 80rpx;
  font-size: 15px;
  color: black;
  text-align: center;
}

.labelBox {
  position: absolute;
  top: 0;
}

.label {
  background: #ec671f;
  height: 60rpx;
  border-radius: 30rpx 0rpx 0rpx 0rpx;
  font-size: 14px;
  color: #fff;
  text-align: center;
  overflow: hidden;
  line-height: 60rpx;
}

.address {
  margin-top: 50rpx;
  font-size: 20px;
  color: #fff;
  letter-spacing: 2px;
  font-weight: bold;
}

.type {
  margin-top: 10rpx;
  background: rgba(255, 255, 255, 0.5);
  height: 50rpx;
  font-size: 15px;
  line-height: 50rpx;
  padding-left: 1%;
  color: #27272a;
}
