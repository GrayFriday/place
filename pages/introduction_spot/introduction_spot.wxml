    <swiper-item wx:for="{{bannerArray}}" wx:key="{{index}}" wx:item="{{item}}" data-itm='{{item}}' data-index='{{index}}'>
      <image src='{{ http }}{{ item.i }}'></image>
    </swiper-item>
